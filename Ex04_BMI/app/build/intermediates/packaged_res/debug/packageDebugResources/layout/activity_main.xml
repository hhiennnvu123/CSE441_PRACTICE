<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="#A5EBAC"
                    android:gravity="center"
                    android:text="Chuong trinh tinh chi so BMI"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@id/editTen"
                        android:text="Nhap ten: "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <EditText
                        android:id="@+id/editTen"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        android:textSize="20sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@id/editChieucao"
                        android:text="Chieu cao:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <EditText

                        android:id="@+id/editChieucao"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:importantForAutofill="no"
                        android:inputType="number|numberDecimal"
                        android:textSize="20sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@id/editCannang"
                        android:text="Can nang: "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <EditText

                        android:id="@+id/editCannang"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:importantForAutofill="no"
                        android:inputType="number|numberDecimal"
                        android:textSize="20sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </TableRow>

                <Button
                    android:id="@+id/btnBMI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="20dp"
                    android:text="Tinh BMI"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large" />
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@id/editCannang"
                        android:text="BMI =  "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <EditText
                        android:id="@+id/editBMI"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:importantForAutofill="no"
                        android:inputType="number|numberDecimal"
                        android:textSize="20sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:labelFor="@id/editCannang"
                        android:text="Chuan doan:  "
                        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                    <EditText
                        android:id="@+id/editChuanDoan"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="2"
                        android:importantForAutofill="no"
                        android:inputType="number|numberDecimal"
                        android:textSize="20sp"
                        tools:ignore="VisualLintTextFieldSize" />
                </TableRow>

            </TableLayout>


        </LinearLayout>
    </ScrollView>
</layout>